{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["./.jj", "./.temp", "./build", "./dist", "./emsdk", "./target"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noShoutyConstants": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
